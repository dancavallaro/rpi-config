logging {
  level  = "info"
  format = "logfmt"
}

livedebugging {
  enabled = true
}

prometheus.remote_write "mimir" {
  endpoint {
    url = "http://mimir-http/api/v1/push"
  }
  write_relabel_config {
    rule {
      replacement = "talos-prod"
      target_label = "cluster"
    }
  }
}

loki.write "loki" {
  endpoint {
    url = "http://loki-http/loki/api/v1/push"
  }
}

loki.echo "echo" {}
